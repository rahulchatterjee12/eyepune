{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/ui/slider.jsx", "app/contact/page.jsx", "app/book/page.jsx", "app/faq.jsx", "app/brands.jsx", "app/snippets/infinite-moving-card-snippet.jsx", "app/snippets/evervault-card-snippet.jsx", "app/snippets/card-hover-effect-snippet.jsx", "app/snippets/3d-card-snippet.jsx", "app/pricing/page.jsx"],
  "exclude": ["node_modules"]
}
